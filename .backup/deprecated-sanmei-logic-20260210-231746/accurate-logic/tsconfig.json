{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "composite": false
  },
  "include": ["src/**/*", "tests/**/*", "*.d.ts"],
  "exclude": ["node_modules", "dist", "mobile", "yinyang-app", "backend", "data", "scripts", "example"]
}
